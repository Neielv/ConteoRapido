                                                        {
                                                            @Html.ActionLink("Quitar", "Delete", new { id = item.COD_JUNTA }, new { @class = "btn btn-block btn-warning" })
                                                        }
                                                    </td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                 
                                }


                            </div>
                         </div>
                    }
</div>
                </div>
            </div>
        </section>
    </div>


                                
                              

                                @if (ViewBag.Message != null)
                                {
                                    <script type="text/javascript">
                                        window.onload = function () {
                                            alert("@ViewBag.Message");
                                        };
                                    </script>
                                }
                             