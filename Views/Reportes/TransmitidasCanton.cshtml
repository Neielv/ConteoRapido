@*@model IEnumerable<CoreCRUDwithORACLE.ViewModels.Reportes.ATransmitidasCanton>*@
@model CoreCRUDwithORACLE.Comunes.PaginatedListAsync<CoreCRUDwithORACLE.ViewModels.Reportes.ATransmitidasCanton>

@{
    ViewData["Title"] = "TransmitidasCanton";
}

<h1>Actas Transmitidas por Canton</h1>

<div id="wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <table>
                        <tr>

                            <th> <a asp-controller="Home" asp-action="Index" class="btn btn-block btn-secondary">  Ir al Inicio </a></th>
                            <th> <a asp-controller="Account" asp-action="Logout" class="btn btn-block btn-danger">Salir</a></th>
                        </tr>
                    </table>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @if (Model != null)
                    {
                        <div class="card">
                            <div class="card-header">
                                <form asp-action="TransmitidasCanton" method="get">
                                    <div class="form-actions no-color">
                                        <p>
                                            Ingrese Texto: <input type="text" name="textoBuscar" value="@ViewData["CurrentFilter"]" />
                                            <input type="submit" value="Buscar" class="btn btn-default btn-light" /> |
                                            <a asp-action="TransmitidasCanton">Listado Completo</a>
                                        </p>
                                    </div>
                                </form>
                                <div asp-validation-summary="All" class="text-danger"></div>

                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <table id="TransCanton" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>
                                                    CODIGO PROVINCIA
                                                    @*@Html.DisplayNameFor(model => model.CODIGO_PROVINCIA)*@
                                                </th>
                                                <th>
                                                    CODIGO CANTON
                                                    @*@Html.DisplayNameFor(model => model.CODIGO)*@
                                                </th>
                                                <th>
                                                    <a asp-action="TransmitidasCanton" asp-route-sortOrder="@ViewData["ProvSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">PROVINCIA</a>
                                                    @*@Html.DisplayNameFor(model => model.PROVINCIA)*@
                                                </th>
                                                <th>
                                                    <a asp-action="TransmitidasCanton" asp-route-sortOrder="@ViewData["CantonSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">CANTON</a>
                                                    @*@Html.DisplayNameFor(model => model.CANTON)*@
                                                </th>
                                                <th>
                                                    @*@Html.DisplayNameFor(model => model.JUNTAS)*@
                                                    JUNTAS
                                                </th>
                                                <th>
                                                    @*@Html.DisplayNameFor(model => model.TRANSMITIDAS)*@
                                                    TRANSMITIDAS
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CODIGO_PROVINCIA)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CODIGO)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PROVINCIA)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CANTON)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.JUNTAS)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TRANSMITIDAS)
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Parroquias", "TransmitidasParroquia", new { codCanton = item.CODIGO }, new { @class = "btn btn-block btn-info" })
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    @{
                                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                                    }
                                    <a asp-action="TransmitidasCanton"
                                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                       class="btn btn-default @prevDisabled">
                                        Anterior
                                    </a>
                                    <a asp-action="TransmitidasCanton"
                                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                       class="btn btn-default @nextDisabled">
                                        Siguiente
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>
