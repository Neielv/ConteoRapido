@*@model IEnumerable<CoreCRUDwithORACLE.ViewModels.Reportes.AOperadoresCanton>*@
@model CoreCRUDwithORACLE.Comunes.PaginatedListAsync<CoreCRUDwithORACLE.ViewModels.Reportes.AOperadoresCanton>

@{
    ViewData["Title"] = "Operadores por Canton";
}

<h1>Operadores por Canton</h1>

<div id="wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <table>
                        <tr>

                            <th> <a asp-controller="Home" asp-action="Index" class="btn btn-block btn-secondary">  Ir al Inicio </a></th>
                            <th> <a asp-controller="Account" asp-action="Logout" class="btn btn-block btn-danger">Salir</a></th>
                        </tr>
                    </table>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @if (Model != null)
                    {
                        <div class="card">
                            <div class="card-header">
                                <form asp-action="OperadoresCanton" method="get">
                                    <div class="form-actions no-color">
                                        <p>
                                            Ingrese Texto: <input type="text" name="textoBuscar" value="@ViewData["CurrentFilter"]" />
                                            <input type="submit" value="Buscar" class="btn btn-default btn-light" /> |
                                            <a asp-action="OperadoresCanton">Listado Completo</a>
                                        </p>
                                    </div>
                                </form>
                                <div asp-validation-summary="All" class="text-danger"></div>

                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <table id="RepCantOper" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @*@Html.DisplayNameFor(model => model.operadoresProvincia.COD_PROV)*@
                                                    CODIGO PROVINCIA
                                                </th>
                                                <th>
                                                    @*@Html.DisplayNameFor(model => model.CANTON)*@
                                                    <a asp-action="OperadoresCanton" asp-route-sortOrder="@ViewData["CantonSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">CANTON</a>
                                                </th>
                                                <th>
                                                    @*@Html.DisplayNameFor(model => model.operadoresProvincia.PROVINCIA)*@
                                                    <a asp-action="OperadoresCanton" asp-route-sortOrder="@ViewData["ProvSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">PROVINCIA</a>
                                                </th>
                                                <th>
                                                    @*@Html.DisplayNameFor(model => model.operadoresProvincia.JUNTAS)*@
                                                    JUNTAS
                                                </th>
                                                <th>
                                                    @*@Html.DisplayNameFor(model => model.operadoresProvincia.OPERADORES)*@
                                                    OPERADORES
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    @Html.HiddenFor(modelitem => item.COD_CANTON)
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.operadoresProvincia.COD_PROV)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CANTON)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.operadoresProvincia.PROVINCIA)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.operadoresProvincia.JUNTAS)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.operadoresProvincia.OPERADORES)
                                                    </td>
                                                    <td>

                                                        @Html.ActionLink("Parroquias", "OperadoresParroquia", new { codCanton = item.COD_CANTON }, new { @class = "btn btn-block btn-info" })

                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    @{
                                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                                    }
                                    <a asp-action="OperadorCanton"
                                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                       class="btn btn-default @prevDisabled">
                                        Anterior
                                    </a>
                                    <a asp-action="OperadorCanton"
                                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                       class="btn btn-default @nextDisabled">
                                        Siguiente
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>
