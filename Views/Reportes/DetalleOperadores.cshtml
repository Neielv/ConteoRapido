@*@model IEnumerable<CoreCRUDwithORACLE.ViewModels.Reportes.DetalleOperadores>*@
@model CoreCRUDwithORACLE.Comunes.PaginatedListAsync<CoreCRUDwithORACLE.ViewModels.Reportes.DetalleOperadores>

@{
    ViewData["Title"] = "DetalleOperadores";
}

<h1>Detalle de Operadores</h1>

<div id="wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <table>
                        <tr>

                            <th> <a asp-controller="Home" asp-action="Index" class="btn btn-block btn-secondary">  Ir al Inicio </a></th>
                            <th> <a asp-controller="Account" asp-action="Logout" class="btn btn-block btn-danger">Salir</a></th>
                        </tr>
                    </table>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @if (Model != null)
                    {
                        <div class="card">
                            <div class="card-header">
                                <form asp-action="DetalleOperadores" method="get">
                                    <div class="form-actions no-color">
                                        <p>
                                            Ingrese Texto: <input type="text" name="textoBuscar" value="@ViewData["CurrentFilter"]" />
                                            <input type="submit" value="Buscar" class="btn btn-default btn-light" /> |
                                            <a asp-action="DetalleOperadores">Listado Completo</a>
                                        </p>
                                    </div>
                                </form>
                                <div asp-validation-summary="All" class="text-danger"></div>

                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <table id="DetalleOper" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @*@Html.DisplayNameFor(model => model.CODIGO)*@
                                                    CODIGO PARROQUIA
                                                </th>
                                                <th>
                                                    <a asp-action="DetalleOperadores" asp-route-sortOrder="@ViewData["ProvSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">PROVINCIA</a>
                                                    @*@Html.DisplayNameFor(model => model.PROVINCIA)*@
                                                </th>
                                                <th>
                                                    <a asp-action="DetalleOperadores" asp-route-sortOrder="@ViewData["CanSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">CANTÓN</a>
                                                    @*@Html.DisplayNameFor(model => model.CANTON)*@
                                                </th>
                                                <th>
                                                    <a asp-action="DetalleOperadores" asp-route-sortOrder="@ViewData["ParrSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">PARROQUIA</a>
                                                    @*@Html.DisplayNameFor(model => model.PARROQUIA)*@
                                                </th>
                                                <th>
                                                    @*@Html.DisplayNameFor(model => model.JUNTA)*@
                                                    JUNTA
                                                </th>
                                                <th>
                                                    @*@Html.DisplayNameFor(model => model.USUARIO)*@
                                                    USUARIO
                                                </th>
                                                <th>
                                                    @*@Html.DisplayNameFor(model => model.TELEFONO)*@
                                                    TELÉFONO
                                                </th>
                                                @*<th></th>*@
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CODIGO)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PROVINCIA)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CANTON)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PARROQUIA)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.JUNTA)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.USUARIO)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TELEFONO)
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    @{
                                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                                    }
                                    <a asp-action="DetalleOperadores"
                                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                       class="btn btn-default @prevDisabled">
                                        Anterior
                                    </a>
                                    <a asp-action="DetalleOperadores"
                                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                       class="btn btn-default @nextDisabled">
                                        Siguiente
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>
